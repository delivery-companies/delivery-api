{
  "name": "albarq-api",
  "version": "1.0.0",
  "description": "Albarq API: A RESTful API for Albarq Delivery App & Albarq Admin Dashboard",
  "main": "server.js",
  "keywords": [],
  "author": "Ali Kehel",
  "license": "ISC",
  "engines": {
    "node": "22.2.0"
  },
  "packageManager": "yarn@4.4.1",
  "scripts": {
    "copy:static": "cpx \"src/static/**/*\" build/static",
    "dev": "ts-node-dev --respawn --transpile-only --exit-child src/server.ts",
    "build": "npm run prisma:generate && npm run prisma:deploy && npm run swagger:autogen && npm run clean && tsc && npm run copy:static",
    "esbuild": "npx esbuild src/server.ts --bundle --minify --platform=node --packages=external --outfile=build/server.js",
    "start": "node build/server.js",
    "clean": "rimraf build",
    "docker:build": "docker build -t albarq-api .",
    "docker:run": "docker run --env-file .env -p 3000:3000 --name albarq-api -d albarq-api",
    "docker:stop": "docker stop albarq-api",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "prisma:migrate:reset": "npx prisma db push && npx prisma generate && npx prisma migrate dev && npx prisma migrate reset",
    "prisma:migrate:dev": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio",
    "prisma:seed": "npx prisma generate && npx prisma db seed",
    "prisma:generate": "npx prisma generate",
    "prisma:deploy": "npx prisma migrate deploy",
    "swagger:autogen": "ts-node src/swagger/swagger.ts",
    "biome:safe": "npx @biomejs/biome check --write src",
    "biome:unsafe": "npx @biomejs/biome check --write --unsafe src"
  },
  "prisma": {
    "seed": "ts-node-dev src/database/seed.ts",
    "schema": "src/database/schema.prisma"
  },
  "dependencies": {
    "@anatine/zod-openapi": "^2.2.5",
    "@aws-sdk/client-s3": "^3.592.0",
    "@prisma/client": "^5.19.1",
    "apicache": "^1.6.3",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.3.1",
    "firebase-admin": "^12.1.1",
    "googleapis": "^148.0.0",
    "handlebars": "^4.7.8",
    "handlebars-async-helpers": "^1.0.6",
    "helmet": "^7.1.0",
    "install": "^0.13.0",
    "ioredis": "^5.6.0",
    "jsbarcode": "^3.11.6",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.9",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "npm": "^11.6.4",
    "openapi3-ts": "^4.3.2",
    "pdf-merger-js": "^5.1.2",
    "puppeteer": "^22.10.0",
    "qrcode": "^1.5.4",
    "qrcode-svg": "^1.1.0",
    "socket.io": "^4.8.1",
    "swagger-autogen": "^2.23.7",
    "swagger-themes": "^1.4.3",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "winston": "^3.13.0",
    "xlsx-populate": "^1.21.0",
    "xmldom": "^0.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/apicache": "^1.6.6",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.16",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/multer-s3": "^3.0.3",
    "@types/node": "^22.15.17",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1",
    "@types/qrcode-svg": "^1.1.5",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/xmldom": "^0",
    "cpx": "^1.5.0",
    "prisma": "^5.19.1",
    "rimraf": "^5.0.7",
    "ts-node-dev": "^2.0.0",
    "tsc": "^2.0.4",
    "typescript": "^5.9.3",
    "yarn-upgrade-all": "^0.7.4"
  }
}
