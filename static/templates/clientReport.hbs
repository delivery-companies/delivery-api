<html lang="ar" dir="rtl">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{#if (eq reportData.clientReport.secondaryType)}}
      <title>كشف الواصل للعميل</title>
    {{else}}
      <title>كشف الراجع للعميل</title>
    {{/if}}
  </head>

  <body class="px-20">
    <header>
      <table>
        <tr>
          <td style="width: 25%">رقم الكشف: <span>{{reportData.id}}</span></td>
          {{#if (eq reportData.clientReport.secondaryType)}}
            <td
              style="width: 25%;font-size:15px"
              class="{{colorizeTitle reportData.clientReport.secondaryType}}"
            >كشف الواصل للعميل</td>
          {{else}}
            <td
              style="width: 25%;font-size:15px"
              class="{{colorizeTitle reportData.clientReport.secondaryType}}"
            >كشف الراجع للعميل</td>
          {{/if}}
          <td style="width: 25%">عدد الطلبيات:
            <span>{{add
                reportData.baghdadOrdersCount
                reportData.governoratesOrdersCount
              }}</span></td>
          <td style="width: 25%" rowspan="3"><img
              src="{{reportData.company.logo}}"
            /></td>
        </tr>
        <tr>
          <td style="width: 25%">التاريخ:
            <span>{{date reportData.createdAt}}</span></td>
          <td style="width: 25%">العميل:
            <span>{{reportData.clientReport.client.name}}</span></td>
          <td style="width: 25%">عدد طلبيات بغداد:
            <span>{{reportData.baghdadOrdersCount}}</span></td>
          <td style="width: 25%">

          </td>
        </tr>

        <tr>
          {{#if (eq reportData.clientReport.secondaryType)}}
            <td style="width: 25%">إجمالي المبلغ المستحق :
              <span>{{currency reportData.clientNet}}</span></td>
          {{else}}
            <td style="width: 25%"></td>
          {{/if}}
          <td style="width: 25%">الصفحة:
            <span>{{reportData.clientReport.store.name}}</span></td>
          <td style="width: 25%">عدد طلبيات المحافظات:
            <span>{{reportData.governoratesOrdersCount}}</span></td>
          <td style="width: 25%"></td>
        </tr>
        <tr>
          <td style="width: 25%"></td>
          <td style="width: 25%">
            <span style="display: block;color:#000;font-size:11px">ساحب الكشف :
              {{reportData.createdBy.name}}
            </span>
          </td>
          <td style="width: 25%"></td>
          <td style="width: 25%"></td>
        </tr>
      </table>
    </header>
    <main>
      <table>
        <thead>
          <tr class="{{colorizeHeader reportData.clientReport.secondaryType}}">
            <th>#</th>
            <th>رقم الوصل</th>
            <th>أنشئ في</th>
            <th>هاتف المستلم</th>
            <th>عنوان المستلم</th>
            <th>مبلغ الوصل</th>
            <th>المبلغ المستلم</th>
            {{#if (eq reportData.clientReport.secondaryType)}}
              <th>مبلغ التوصيل</th>
              <th>صافي العميل</th>
            {{/if}}
            <th>الحالة</th>
            <th>الملاحظات</th>
          </tr>
        </thead>
        <tbody>
          {{#each orders}}
            <tr class="{{changed status totalCost paidAmount}}">
              <td class="nowrap">{{inc @index}}</td>
              <td>{{receiptNumber}}</td>
              <td>{{date createdAt}}</td>
              <td>{{mapPhones recipientPhones}}</td>
              <td>{{localizeGovernorate governorate}} - {{location.name}}</td>
              <td>{{currency totalCost}}</td>
              <td>{{currency paidAmount}}</td>
              {{#if (eq @root.reportData.clientReport.secondaryType)}}
                <td>{{currency deliveryCost}}</td>
                <td>{{currency clientNet}}</td>
              {{/if}}
              {{!-- <td class="{{colorizeRow2 ../reportData.clientReport.secondaryType status}}">{{localizeOrderStatus status}}</td> --}}
              <td class="{{colorizeRow2 status}}">{{localizeOrderStatus
                  status
                }}</td>
              <td>{{notes}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <!-- Force page break before totals, if needed -->
      <div style="page-break-inside: avoid; break-inside: avoid;">
        <table>
          <tr>
            {{#if (eq reportData.clientReport.secondaryType)}}
              <td colspan="7" style="font-weight: bold;width:50%">إجمالي المبلغ
                المستحق
              </td>
              <td style="font-weight: bold">{{currency
                  reportData.clientNet
                }}</td>
            {{/if}}
          </tr>
        </table>
      </div>
    </main>

    {{!-- <section class="watermark">{{reportData.company.name}}</section> --}}
  </body>

</html>