<html lang="ar" dir="rtl">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>كشف مخزن</title>
  </head>

  <body class="px-20">
    <header>
      <table>
        <tr>
          <td style="width: 25%">رقم الكشف: <span>{{reportData.id}}</span></td>
          <td
            style="width: 25%"
            class="title
              {{colorizeTitle reportData.repositoryReport.secondaryType}}"
          >كشف مخزن</td>
          <td style="width: 25%">عدد الطلبيات:
            <span>{{add
                reportData.baghdadOrdersCount
                reportData.governoratesOrdersCount
              }}</span></td>
          <td style="width: 25%" rowspan="3"><img
              src="{{reportData.company.logo}}"
            /></td>
        </tr>
        <tr>
          <td style="width: 25%">التاريخ:
            <span>{{date reportData.createdAt}}</span></td>
          <td style="width: 25%">المخزن:
            <span>{{reportData.repositoryReport.repository.name}}</span></td>
          <td style="width: 25%">عدد طلبيات بغداد:
            <span>{{reportData.baghdadOrdersCount}}</span></td>
          <td style="width: 25%"></td>
        </tr>
        <tr>
          <td style="width: 25%"></td>
          <td style="width: 25%"></td>
          <td style="width: 25%">عدد طلبيات المحافظات:
            <span>{{reportData.governoratesOrdersCount}}</span></td>
          <td style="width: 25%"></td>
        </tr>
      </table>
    </header>
    <main>
      <table>
        <thead>
          <tr
            class="{{colorizeHeader reportData.repositoryReport.secondaryType}}"
          >
            <th>#</th>
            <th>رقم الوصل</th>
            <th>أنشئ في</th>
            <th>هاتف المستلم</th>
            <th>عنوان المستلم</th>
            <th>مبلغ الوصل</th>
            <th>المبلغ المستلم</th>
            {{#if (eq reportData.repositoryReport.secondaryType)}}
              <th>مبلغ التوصيل</th>
              <th>صافي العميل</th>
            {{/if}}
            <th>الحالة</th>
          </tr>
        </thead>
        <tbody>
          {{#if (eq reportData.repositoryReport.secondaryType)}}
            {{#each orders}}
              <tr class="{{changed status totalCost paidAmount}}">
                <td class="nowrap">{{inc @index}}</td>
                <td>{{receiptNumber}}</td>
                <td>{{date createdAt}}</td>
                <td>{{mapPhones recipientPhones}}</td>
                <td>{{localizeGovernorate governorate}}
                  -
                  {{location.name}}
                  -
                  {{recipientAddress}}</td>
                <td>{{currency totalCost}}</td>
                <td>{{currency paidAmount}}</td>
                <td>{{currency deliveryCost}}</td>
                <td>{{currency clientNet}}</td>
                {{!-- <td class="{{colorizeRow2 ../reportData.repositoryReport.secondaryType status}}">{{localizeOrderStatus status}}</td> --}}
                <td class="{{colorizeRow2 status}}">{{localizeOrderStatus
                    status
                  }}</td>
              </tr>
            {{/each}}
          {{else}}
            {{#each orders}}
              <tr class="{{changed status totalCost paidAmount}}">
                <td class="nowrap">{{inc @index}}</td>
                <td>{{receiptNumber}}</td>
                <td>{{date createdAt}}</td>
                <td>{{mapPhones recipientPhones}}</td>
                <td>{{localizeGovernorate governorate}}
                  -
                  {{location.name}}
                  -
                  {{recipientAddress}}</td>
                <td>{{currency totalCost}}</td>
                <td>{{currency paidAmount}}</td>
                {{!-- <td class="{{colorizeRow2 ../reportData.repositoryReport.secondaryType status}}">{{localizeOrderStatus status}}</td> --}}
                <td class="{{colorizeRow2 status}}">{{localizeOrderStatus
                    status
                  }}</td>
              </tr>
            {{/each}}
          {{/if}}
        </tbody>
      </table>
      <!-- Force page break before totals, if needed -->
      <div style="page-break-inside: avoid; break-inside: avoid;">
        <table>
          <tr>
            <td colspan="7" style="font-weight: bold;width:20%">المجموع</td>
            <td style="font-weight: bold">مبلغ الوصل :
              {{currency reportData.totalCost}}</td>
            <td style="font-weight: bold">المبلغ المدفوع :
              {{currency reportData.paidAmount}}</td>
            {{#if (eq reportData.repositoryReport.secondaryType)}}
              <td style="font-weight: bold">اجور التوصيل :
                {{currency reportData.deliveryCost}}</td>
              <td style="font-weight: bold">إجمالي المبلغ المستحق :
                {{currency reportData.clientNet}}</td>
            {{/if}}

          </tr>
        </table>
      </div>
    </main>

    {{!-- <section class="watermark">{{reportData.company.name}}</section> --}}
  </body>

</html>